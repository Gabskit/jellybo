{
  "name": "bubblebox",
  "version": "1.0.0",
  "description": "Bubblebox Game",
  "main": "dist/src/index.js",
  "homepage": "https://bubblebox.game",
  "author": {
    "name": "Polaris",
    "email": "polaris@example.com"
  },
  "scripts": {
    "build": "tsc",
    "build:linux": "npm run build && nix-shell -p libxcrypt-compat --run \"electron-builder build --linux rpm --arm64\""
  },
  "devDependencies": {
    "electron": "latest",
    "electron-builder": "latest",
    "typescript": "latest",
    "electron-unhandled": "latest",
    "electron-updater": "latest",
    "chokidar": "latest",
    "electron-serve": "latest",
    "electron-window-state": "latest"
  },
  "build": {
    "appId": "com.polaris.bubblebox",
    "productName": "Bubblebox",
    "files": [
      "dist/src/**/*",
      "node_modules/**/*",
      {
        "from": "../www",
        "to": "www"
      }
    ],
    "linux": {
      "target": [
        "rpm"
      ],
      "maintainer": "polaris@example.com",
      "category": "Game",
      "icon": "www/assets/Bubble_icon.png"
    },
    "rpm": {
      "synopsis": "Bubblebox Game for Plasma Mobile"
    }
  }
}