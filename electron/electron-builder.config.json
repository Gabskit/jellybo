{
  "appId": "com.polaris.bubblebox",
  "productName": "bubblebox",
  "directories": {
    "buildResources": "resources"
  },
  "files": [
    "assets/**/*",
    "build/**/*",
    "capacitor.config.*",
    "app/**/*"
  ],
  "publish": {
    "provider": "github"
  },
  "nsis": {
    "allowElevation": true,
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  },
  "win": {
    "target": "nsis",
    "icon": "app/assets/Bubble_icon.png"
  },
  "mac": {
    "category": "public.app-category.utilities",
    "target": "dmg",
    "icon": "app/assets/Bubble_icon.png"
  },
  "linux": {
    "target": "AppImage",
    "icon": "app/assets/Bubble_icon.png"
  }
}